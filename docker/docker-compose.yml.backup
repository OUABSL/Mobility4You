services:
  # Servicio para la base de datos
  # Se utiliza MariaDB como base de datos
  db:
    image: mariadb:10.6
    container_name: mobility4you_db
    volumes:
      - db_data:/var/lib/mysql
      - ./mariadb-init.sh:/docker-entrypoint-initdb.d/mariadb-init.sh:ro
    restart: always
    environment:
      - MYSQL_ROOT_PASSWORD=${MYSQL_ROOT_PASSWORD}
      - MYSQL_DATABASE=${MYSQL_DATABASE}
      - MYSQL_USER=${MYSQL_USER}
      - MYSQL_PASSWORD=${MYSQL_PASSWORD}
    networks:
      - mobility4you_network
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u", "mobility", "-p$MYSQL_PASSWORD"]
      timeout: 20s
      retries: 10
      interval: 10s

  # Servicio para el backend Django
  # Se utiliza Gunicorn como servidor WSGI
  backend:
    build:
      context: ../backend
      dockerfile: Dockerfile
    container_name: mobility4you_backend
    restart: always
    volumes:
      - ../backend:/app
      - static_volume:/app/staticfiles # MODIFICADO: para coincidir con la ubicaci√≥n de collectstatic
      - media_volume:/app/media    depends_on:
      db:
        condition: service_healthy
    environment:
      - DJANGO_SETTINGS_MODULE=config.settings
      - DJANGO_ENV=${DJANGO_ENV:-development}
      - DB_HOST=db
      - DB_NAME=${MYSQL_DATABASE}
      - DB_USER=${MYSQL_USER}
      - DB_PASSWORD=${MYSQL_PASSWORD}
      - MYSQL_DATABASE=${MYSQL_DATABASE}
      - MYSQL_USER=${MYSQL_USER}
      - MYSQL_PASSWORD=${MYSQL_PASSWORD}
      - SECRET_KEY=${SECRET_KEY}
      - ALLOWED_HOST=${ALLOWED_HOST}
      - DEBUG=${DEBUG:-True}
      # Stripe Configuration
      - STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
      - STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
      - STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}
      - STRIPE_ENVIRONMENT=${STRIPE_ENVIRONMENT:-test}
      - STRIPE_API_VERSION=${STRIPE_API_VERSION:-2023-10-16}
    networks:
      - mobility4you_network
    ports:
      - "8000:8000"

  # Servicio para el frontend React
  # Se utiliza Nginx como servidor web
  frontend:
    build:
      context: ../frontend
      dockerfile: ./Dockerfile
    container_name: mobility4you_frontend
    restart: always
    volumes:
      - /usr/app/node_modules
    depends_on:
      - backend
    ports:
      - "3000:3000"
    networks:
      - mobility4you_network

  # Servicio para Nginx
  # Se utiliza Nginx como proxy inverso
  nginx:
    image: nginx:1.21
    container_name: mobility4you_nginx
    ports:
      - "80:80"
    volumes:
      - ./nginx/nginx.dev.conf:/etc/nginx/conf.d/default.conf
      - static_volume:/usr/share/nginx/static
      - media_volume:/usr/share/nginx/media
    depends_on:
      - frontend
    networks:
      - mobility4you_network
    restart: always

  redis:
    image: redis:6.2
    container_name: mobility4you_redis
    restart: always
    networks:
      - mobility4you_network


volumes:
  db_data:
  static_volume:
  media_volume:

networks:
  mobility4you_network:
    driver: bridge