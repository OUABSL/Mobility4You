# =======================================================
# VARIABLES DE ENTORNO - BACKEND EXAMPLE
# Este archivo muestra todas las variables necesarias
# Copia a .env-dev o .env-prod y ajusta los valores
# =======================================================

# === POSTGRESQL DATABASE ===
POSTGRES_DB=mobility4you_db
POSTGRES_USER=mobility4you_user
POSTGRES_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432
DB_ENGINE=django.db.backends.postgresql
DB_NAME=mobility4you_db
DB_USER=mobility4you_user
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://mobility4you_user:your_secure_password_here@localhost:5432/mobility4you_db

# === DJANGO CONFIGURATION ===
SECRET_KEY=change_this_secret_key_in_production
DEBUG=True
DJANGO_ENV=development
DJANGO_SETTINGS_MODULE=config.settings.development
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# === URLS ===
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:8000/api

# === PAYMENT PROCESSING ===
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_SUCCESS_URL=http://localhost:3000/reservation-confirmation/exito
STRIPE_CANCEL_URL=http://localhost:3000/reservation-confirmation/error

# === EMAIL CONFIGURATION ===
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_email_password
DEFAULT_FROM_EMAIL=noreply@your-domain.com
CONTACT_EMAIL=contacto@your-domain.com

# === STORAGE CONFIGURATION (B2/BACKBLAZE) ===
USE_S3=False
B2_APPLICATION_KEY_ID=your_b2_application_key_id
B2_APPLICATION_KEY=your_b2_application_key
B2_BUCKET_NAME=your_bucket_name
B2_S3_ENDPOINT=s3.your-region.backblazeb2.com

# === REDIS CONFIGURATION ===
REDIS_URL=redis://localhost:6379/0

# === SECURITY ===
SECURE_SSL_REDIRECT=False
SECURE_PROXY_SSL_HEADER=('HTTP_X_FORWARDED_PROTO', 'https')
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# === LOGGING ===
LOG_LEVEL=DEBUG
DJANGO_LOG_LEVEL=DEBUG
LOG_FILE_PATH=logs/django.log